<div class="c1">

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class:'container2') do |f| %>
  
  <div class="form-actions">
  </div>
  <div class="bd2">
    <%= image_tag 'user.png', class: 'col-md-8 xy', alt: 'user id' %>
    <div class="form-group">
       ID
    <%= f.input_field :userid, required: false, autofocus: true, class:'form-control' %>
     </div>
    <div class="form-group">
     Password
    <%= f.input_field :password, required: false, class:'form-control' %>
    </div>
    
    <div class="b1">
        <%= f.button :submit, "Log in", class:'btn btn-primary' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

